<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Orange HRM App Test Regression Suite" verbose="4" parallel="tests" thread-count="3">

	<listeners>
		<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<listener class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener class-name="com.qa.opencart.listners.RetryAnalyzer"/>
	</listeners>
	
	<test name="Login Page Test_Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.orangehrm.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Login Page Test_Edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.orangehrm.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Login Page Test_Firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.orangehrm.tests.LoginPageTest" />
		</classes>
	</test>

	
</suite>