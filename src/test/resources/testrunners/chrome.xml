<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Orange HRM App Test Chrome Suite" verbose="4" parallel="tests" thread-count="5">
	
	<listeners>
		<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<listener class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener class-name="com.qa.opencart.listeners.RetryListener"/>
	</listeners>
	
	<test name="Login Page Test_Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.orangehrm.tests.LoginPageTest" />
		</classes>
	</test>
	
	<test name="Dashborad Page Test_Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.orangehrm.tests.DashboardPageTest"/>
		</classes>
	</test>
	
</suite>